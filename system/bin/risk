#!/system/bin/sh
# Risk - Module Magisk - Clean RAM Cache And Foce Stop Application By Category
RED='\033[0;31m'

GREEN='\033[0;32m'

YELLOW='\033[0;33m'

BLUE='\033[0;34m'

NC='\033[0m'
# MIT License
# 
# Copyright (c) 2024 rakarmp
# 
